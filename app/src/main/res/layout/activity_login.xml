<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.jetnix.my.schoolopaediaapp.LoginActivity"
    android:background="@drawable/bg"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="508dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="#202931"
        android:minWidth="500dp"
        android:orientation="vertical"
        android:padding="30dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/sign_in_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SIGN IN"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0.09"
            android:background="#424c55"
            android:inputType="textEmailAddress"
            android:textColor="#FFF"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:capitalize="none"
            android:hint="email address"
            android:textColorHint="#727273" />

        <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.06"
            android:background="#424c55"
            android:ems="10"
            android:inputType="textPassword"
            android:textIsSelectable="true"
            android:paddingLeft="20dp"
            android:textSize="15dp"
            android:hint="password"
            android:textColorHint="#727273"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0.06"
            android:background="#198a88"
            android:text="Sign In"
            android:textColor="#FFF"
            android:capitalize="none" />

        <TextView
            android:id="@+id/register_button_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not a member Yet ??"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#DC483A"
            android:layout_marginTop="8dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:text="@string/facebook_button"
            android:background="#424c55"
            android:layout_marginTop="15dp"
            android:textColor="#FFF"
            android:capitalize="none"
            android:textColorHint="#727273" />

        <Button
            android:id="@+id/google_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:text="@string/google_button"
            android:background="#424c55"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:capitalize="none" />

        <TextView
            android:id="@+id/forgot_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ??"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#DC483A"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/login_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:text=""
            android:visibility="gone"
            android:padding="2dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.jetnix.my.schoolopaediaapp.LoginActivity"
    android:background="@drawable/bg"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="#202931"
        android:minWidth="500dp"
        android:orientation="vertical"
        android:padding="30dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/header_register_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Register For School"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/student_code_register_school"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0.09"
            android:background="#424c55"
            android:textColor="#FFF"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:capitalize="none"
            android:hint="Student Code"
            android:textColorHint="#727273" />

        <EditText
            android:id="@+id/school_code_register_school"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.06"
            android:background="#424c55"
            android:ems="10"
            android:inputType="textPassword"
            android:textIsSelectable="true"
            android:paddingLeft="20dp"
            android:textSize="15dp"
            android:hint="School Code"
            android:textColorHint="#727273"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/register_button_register_school"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0.06"
            android:background="#198a88"
            android:text="ENroll Yourself"
            android:textColor="#FFF"
            android:capitalize="none" />

        <TextView
            android:id="@+id/error_text_register_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:text=""
            android:visibility="gone"
            android:padding="2dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>
